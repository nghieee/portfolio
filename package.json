{
  "name": "dopefolio",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "compile:scss": "sass --watch sass/main.scss css/style.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.css -o css/style.css",
    "compress:css": "sass css/style.css css/style.css --style=compressed",
    "build": "npm-run-all prefix:css compress:css",
    "serve": "live-server --no-browser --port=5500 --open=index.html",
    "dev": "npm-run-all --parallel compile:scss serve"
  },
  "author": "",
  "license": "GPL-3.0",
  "devDependencies": {
    "autoprefixer": "^10.3.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "sass": "^1.77.0",
    "live-server": "^1.2.2"
  }
}
